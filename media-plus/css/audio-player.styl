@import 'audio-buttons'

.cr-media-audio
	width: 100%
	height 100%
	background-image url(../img/bg-audio.png)
	background-position center bottom
	background-repeat no-repeat

.cr-audio-cover,
.cr-audio-playlist
	position: absolute;
	right: 10px;
	background-color: #3d3d3d;
	color: #00fff2;
	scroll: vertical;
	padding: 5px;
	border: 1px solid #00fff3;
	border-radius: 6px;

.cr-audio-cover
	width: 90px;
	height: 90px;
	bottom: 7px;  
	padding: 1px;

.cr-audio-cover img
	margin: auto;
	width: 88px;
	height: 88px;  

.cr-audio-playlist
	bottom:   128px;
	overflow-y: scroll;
	width:  315px;
	height: 394px;

.cr-audio-time, 
.cr-audio-composition
	position: absolute;
	background-color: #3d3d3d;
	color: #00fff2;
	font-family: sans-serif;
	font-size: 16pt;
	text-decoration: small-caps;

.cr-audio-composition
	left: 56px;
	bottom:   72px;

.cr-audio-time
	right: 209px;
	text-align: right;
	bottom 30px

.cr-audio-gauge
	position: absolute
	width: 368px
	height 58px
	right: 209px;
	bottom 14px
