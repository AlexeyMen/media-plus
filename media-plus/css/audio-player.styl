@import 'player-buttons'

.cr-media-audio
	width: 100%
	height: 100%
	background-image: url("../img/bg-audio.png")
	background-position: center bottom
	background-repeat: no-repeat

.cr-volume-slider-wrap-audio
	height 350px
	bottom 144px
	left 156px
	position absolute

.cr-volume-scale-wrap-audio
	bottom 233px
	left 225px
	position absolute

.cr-audio-gauge
	position absolute
	width 368px
	height 60px
	right 330px
	bottom 10px

.cr-audio-time
.cr-audio-composition
	position absolute
	background-color #3d3d3d
	color #00fff2
	font-family sans-serif
	font-size 16pt
	text-decoration small-caps

.cr-audio-composition
	left 80px
	bottom 70px
	color #f8bfa9
/*	visibility hidden */

.cr-audio-time
	right 164px
	text-align right
	bottom 33px

.cr-audio-cover
.cr-audio-playlist
.cr-audio-filelist
	position absolute
	right 10px

.cr-audio-playlist
.cr-audio-filelist
	background-color #3d3d3d
	color #00fff2
	scroll vertical
	padding 5px
	border 1px solid #00fff2
	border-radius 6px
	font-family fantasy
	width 315px
	height 394px
	bottom 124px

.cr-audio-filelist
	display none

.cr-audio-cover
	width 90px
	height 90px
	bottom 7px
	padding 1px
	position absolute
	border 1px solid #00fff2
	border-radius 6px

.cr-audio-cover img
	margin auto
	width 88px
	height 88px

